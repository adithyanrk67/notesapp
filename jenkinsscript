pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], userRemoteConfigs: [[url: 'https://github.com/YOUR_USERNAME/YOUR_REPO.git']]])
            }
        }
        stage('Build') {
            steps {
                sh 'docker build -t YOUR_REGISTRY/YOUR_IMAGE:latest .'
            }
        }
        stage('Test') {
            steps {
                sh 'docker run YOUR_REGISTRY/YOUR_IMAGE:latest pytest'
            }
        }
        stage('Push') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'YOUR_CREDENTIALS', passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                    sh "docker login -u $DOCKER_USERNAME -p $DOCKER_PASSWORD YOUR_REGISTRY"
                    sh "docker push YOUR_REGISTRY/YOUR_IMAGE:latest"
                }
            }
        }
    }
}
